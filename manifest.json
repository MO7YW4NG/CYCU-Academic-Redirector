{
  "manifest_version": 3,
  "name": "CYCU Academic Redirector",
  "version": "1.3",
  "description": "Redirects CYCU academic resources.",
  "permissions": [
    "storage",
    "cookies",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://sso.lib.cycu.edu.tw/*",
    "https://cylis.lib.cycu.edu.tw/*",
    "https://*.lib.cycu.edu.tw/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; default-src 'self'"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "redirect_rules",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}